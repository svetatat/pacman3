<Window x:Class="pacman3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pac-Man" 
        Height="750" 
        Width="850"
        WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="DarkBlue" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="PAC-MAN" 
                          Foreground="Yellow"
                          FontSize="28"
                          FontWeight="Bold"/>
                <TextBlock Text=" - Курсовой проект" 
                          Foreground="White"
                          FontSize="16"
                          Margin="10,0,0,0"
                          VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Игровая область -->
        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="2" Margin="10">
            <Canvas x:Name="GameCanvas" Background="Black"/>
        </Border>

        <!-- Панель управления -->
        <Border Grid.Row="2" Background="LightGray" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="StartButton" 
                       Content="Начать игру" 
                       Padding="15,5" 
                       Margin="5"
                       FontSize="14"
                       Click="StartButton_Click"/>
                <Button x:Name="PauseButton" 
                       Content="Пауза" 
                       Padding="15,5" 
                       Margin="5"
                       FontSize="14"
                       Click="PauseButton_Click"/>
                <Button x:Name="RestartButton" 
                       Content="Рестарт" 
                       Padding="15,5" 
                       Margin="5"
                       FontSize="14"
                       Click="RestartButton_Click"/>
                <Button x:Name="MenuButton" 
                       Content="Главное меню" 
                       Padding="15,5" 
                       Margin="5"
                       FontSize="14"
                       Click="MenuButton_Click"/>
            </StackPanel>
        </Border>

        <!-- Статус -->
        <StatusBar Grid.Row="3" Background="LightGray" Height="30">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" FontSize="14"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock x:Name="LevelText" Text="Уровень: 1" FontSize="14" Margin="10,0"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>