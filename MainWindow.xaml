<Window x:Class="pacman3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pac-Man" 
        Height="700" 
        Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="DarkBlue" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="PAC-MAN" 
                          Foreground="Yellow"
                          FontSize="28"
                          FontWeight="Bold"/>
                <TextBlock Text=" - Курсовой проект" 
                          Foreground="White"
                          FontSize="16"
                          Margin="10,0,0,0"
                          VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Игровая область -->
        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="2" Margin="10">
            <Canvas x:Name="GameCanvas" Background="Black"/>
        </Border>

        <!-- Статус -->
        <StatusBar Grid.Row="2" Background="LightGray" Height="30">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" FontSize="14"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock x:Name="LevelText" Text="Уровень: 1" FontSize="14" Margin="10,0"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>