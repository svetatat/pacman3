<Window x:Class="pacman3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pac-Man" 
        Height="700" 
        Width="850"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель информации -->
        <Border Grid.Row="0" Background="DarkBlue" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock x:Name="ScoreText" Text="Очки: 0" 
                          Foreground="Yellow" FontSize="18" Margin="20,0"/>
                <TextBlock x:Name="LivesText" Text="Жизни: 3" 
                          Foreground="Yellow" FontSize="18" Margin="20,0"/>
            </StackPanel>
        </Border>

        <!-- Игровая область -->
        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="2" Margin="10">
            <Canvas x:Name="GameCanvas" Background="Black"/>
        </Border>

        <!-- Панель управления -->
        <Border Grid.Row="2" Background="LightGray" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="PauseButton" Content="Пауза" 
                       Width="100" Height="30" Margin="10,0"
                       Click="PauseButton_Click"/>
                <Button x:Name="RestartButton" Content="Рестарт" 
                       Width="100" Height="30" Margin="10,0"
                       Click="RestartButton_Click"/>
                <TextBlock x:Name="StatusText" Text="Стрелки: движение | Esc: пауза | R: рестарт" 
                          VerticalAlignment="Center" Margin="20,0"/>
            </StackPanel>
        </Border>

        <!-- Оверлей паузы (прозрачный) -->
        <Border x:Name="PauseOverlay" Grid.Row="1" Background="#80000000" 
                Visibility="Collapsed" Margin="10">
            <TextBlock Text="ПАУЗА" 
                      Foreground="Yellow" FontSize="48"
                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Window>