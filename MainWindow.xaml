<Window x:Class="pacman3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pac-Man" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Заголовок -->
        <Border Grid.Row="0" Background="DarkBlue" Padding="10">
            <TextBlock Text="PAC-MAN" 
                      Foreground="Yellow"
                      FontSize="24"
                      FontWeight="Bold"
                      HorizontalAlignment="Center"/>
        </Border>
        <!-- Игровая область -->
        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Margin="10">
            <Canvas x:Name="GameCanvas" Background="Black"/>
        </Border>
        <!-- Статус -->
        <StatusBar Grid.Row="2" Background="LightGray">
            <StatusBarItem>
                <TextBlock x:Name="StatusText"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>